{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "eqeqeq": ["warn", "always", { "null": "ignore" }],
        "no-lonely-if": "warn",
        "brace-style": ["warn", "1tbs"],
        "comma-dangle": ["warn", "always-multiline"],
        "eol-last": ["warn", "always"],
        "no-trailing-spaces": "warn",
        "space-infix-ops": "warn",

        "indent": ["warn", "tab"],
        "linebreak-style": ["warn", "unix"],
        "quotes": ["warn", "double"],
        "semi": ["warn", "always"]
    }
}
